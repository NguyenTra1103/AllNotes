<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/soundFragment">

    <fragment
        android:id="@+id/soundFragment"
        android:name="com.example.note_app.example.fragment.SoundFragment"
        android:label="fragment_sound"
        tools:layout="@layout/fragment_sound" >
        <action
            android:id="@+id/action_soundFragment_to_soundListFragment"
            app:destination="@id/soundListFragment"
            app:exitAnim="@anim/fade_out"
            app:enterAnim="@anim/slide_in"/>
    </fragment>
    <fragment
        android:id="@+id/soundListFragment"
        android:name="com.example.note_app.example.fragment.SoundListFragment"
        android:label="fragment_sound_list"
        tools:layout="@layout/fragment_sound_list" />
</navigation>